<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" android:id="@+id/view_home_ext_layout" xmlns:android="http://schemas.android.com/apk/res/android">
 
 <com.lianmeng.core.home.activity.PullToRefreshView
        android:id="@+id/home_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/home_pull_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <LinearLayout
            android:id="@+id/view_home_ext_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:id="@+id/view_home_ext_layout2"
                 >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:orientation="vertical" >

                        <com.lianmeng.core.home.activity.AbSlidingPlayView
                            android:id="@+id/viewPager_menu"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:background="#00000000" >
                        </com.lianmeng.core.home.activity.AbSlidingPlayView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginTop="@dimen/footer_padding"
                        android:orientation="vertical" >

                        <com.lianmeng.core.home.activity.MyGridView
                            android:id="@+id/my_gridview"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:horizontalSpacing="10dp"
                            android:numColumns="4"
                            android:verticalSpacing="10dp" >
                        </com.lianmeng.core.home.activity.MyGridView>
                   
                    </LinearLayout>
                    
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                           
                        
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:scaleType="fitXY"
                    android:src="@drawable/menu_1_0" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_Gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_1_1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/bg_Gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/menu_1_2" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/bg_Gray" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/menu_1_3" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                  
            
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="特色市场"
                    android:textColor="@color/tv_Black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu_2_1" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/bg_Gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.2"
                            android:scaleType="fitXY"
                            android:src="@drawable/menu_2_2" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/bg_Gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/menu_2_3" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/bg_Gray" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/menu_2_4" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
            
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_Gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="热门市场"
                    android:textColor="@color/tv_Black"
                    android:textSize="20sp" />

                <com.lianmeng.core.home.activity.MyGridView
                    android:id="@+id/my_gridview_hot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="5dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp" >
                </com.lianmeng.core.home.activity.MyGridView>
            </LinearLayout>
            
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@color/transparent" >

                    <ImageView
                        android:id="@id/iv_left"
                        android:layout_width="49.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:background="@drawable/bg_home_title_left"
                        android:paddingBottom="6.0dip"
                        android:paddingLeft="8.0dip"
                        android:paddingRight="4.0dip"
                        android:paddingTop="6.0dip"
                        android:src="@drawable/btn_home_saoma" />

                    <LinearLayout
                        android:id="@id/ll_title"
                        android:layout_width="wrap_content"
                        android:layout_height="36.0dip"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="1.5dip"
                        android:layout_marginRight="1.5dip"
                        android:layout_toLeftOf="@id/iv_right"
                        android:layout_toRightOf="@id/iv_left"
                        android:background="@drawable/bg_home_title_center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="20.0dip"
                        android:paddingRight="20.0dip" >

                        <TextView
                            android:id="@id/mid_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:drawablePadding="4.0dip"
                            android:drawableRight="@drawable/icon_arrow_down"
                            android:gravity="center"
                            android:paddingLeft="5.0dip"
                            android:paddingRight="5.0dip"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@id/iv_right"
                        android:layout_width="49.0dip"
                        android:layout_height="36.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10.0dip"
                        android:background="@drawable/bg_home_title_right"
                        android:paddingBottom="6.0dip"
                        android:paddingLeft="4.0dip"
                        android:paddingRight="8.0dip"
                        android:paddingTop="6.0dip"
                        android:src="@drawable/btn_home_help" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
       
 
        </ScrollView>
        <!-- -->
      </com.lianmeng.core.home.activity.PullToRefreshView>
  
 
</LinearLayout>